<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">

    <Button
        android:id="@+id/ricercaLibro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ricerca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/eliminaLibro"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343" />

    <Button
        android:id="@+id/aggiungiLibro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/eliminaLibro"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <Button
        android:id="@+id/eliminaLibro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elimina"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <Button
        android:id="@+id/mostraCatalogoBtn"
        android:layout_width="100dp"
        android:layout_height="52dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="52dp"
        android:text="CATALOGO"
        app:layout_constraintStart_toEndOf="@+id/ricercaLibro"
        app:layout_constraintTop_toBottomOf="@+id/eliminaLibro" />

    <Button
        android:id="@+id/prestitoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Prestito"
        app:layout_constraintTop_toBottomOf="@+id/ricercaLibro"
        tools:layout_editor_absoluteX="62dp" />
</androidx.constraintlayout.widget.ConstraintLayout>